<?xml version="1.0" encoding="UTF-8"?>
<jeus-web-dd xmlns="http://www.tmaxsoft.com/xml/ns/jeus" version="7.0">
    <context-path>/</context-path>
    <enable-jsp>true</enable-jsp>
    <auto-reload>
        <enable-reload>true</enable-reload>
        <use-jvm-hotswap>true</use-jvm-hotswap>
        <check-on-demand>true</check-on-demand>
    </auto-reload>
    <added-classpath>
        <class-path>/data/app_home/hsco/WEB-INF/lib/nexacro-xapi-1.0.jar</class-path>
        <class-path>/data/app_home/hsco/WEB-INF/lib/nexacro-xeni-1.1.jar</class-path>
        <class-path>/data/app_home/hsco/WEB-INF/lib/ubigateway.jar</class-path>
    </added-classpath>
    <aliasing>
       <alias>
           <alias-name>/</alias-name>
           <real-path>/data/app_home/hsco</real-path>
       </alias>
       <alias>
           <alias-name>/imgs/</alias-name>
           <real-path>/data/app_home/upload/</real-path>
       </alias>
    </aliasing>
    <res-ref>
        <jndi-info>
                    <ref-name>dbcon</ref-name>
                    <export-name>jdbc/hsco</export-name>
        </jndi-info>
        <jndi-info>
                    <ref-name>batchcon</ref-name>
                    <export-name>jdbc/batch</export-name>
        </jndi-info>
    </res-ref>
</jeus-web-dd>