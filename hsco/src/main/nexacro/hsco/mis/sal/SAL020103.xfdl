/*
 * 함수명  	: initForm
 * 설명 		: Form을 초기화한다.
 * params  		: None
 * return Type 	: None
 * 사용법		: this.initForm();
 */
this.fn_init_form = function()
{
	trace("fn_init_form");
	this.gfn_initForm(this);
	this.fn_misFormInit(this);
	
	this.ds_cond.clearData();
	this.ds_confmSe.clearData();
	
	
