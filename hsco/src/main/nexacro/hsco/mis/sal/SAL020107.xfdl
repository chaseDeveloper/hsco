			var sInDatasets   	= "input2=DS_SCHXPN_SBSIDY_UPLMT_AM:U";
			var sOutDatasets  	= "";
			break;	
	}

	Ex.core.tran(this, strSvcId, sController, sInDatasets, sOutDatasets); 
}

